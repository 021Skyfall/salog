# Build stage
FROM gradle:7.2.0-jdk11 AS build
COPY --chown=gradle:gradle . /home/gradle/source
WORKDIR /home/gradle/source
RUN gradle build --no-daemon --no-watch-fs


# Package stage
FROM openjdk:11-jre-slim
COPY --from=build /home/gradle/source/build/libs/salog-0.0.1-SNAPSHOT.jar /app/salog.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app/salog.jar"]